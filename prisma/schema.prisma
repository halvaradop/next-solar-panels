generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum RoleEnum {
  ADMIN
  EMPLOYEE
}

enum Status {
  ACTIVE
  INACTIVE
}

model Client {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  employees Employee[]
  status    Status
}

model Role {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  description String
  employees   Employee[]
}

model Employee {
  id       Int     @id @default(autoincrement())
  name     String
  lastname String
  email    String  @unique
  password String
  status   Status
  idClient Int
  Client   Client  @relation(fields: [idClient], references: [id])
  idRole   Int
  Role     Role    @relation(fields: [idRole], references: [id])
  Plant    Plant[]
}

model Coordinate {
  id        Int     @id @default(autoincrement())
  latitude  Float
  longitude Float
  Plant     Plant[]
  Zone      Zone[]
}

model Plant {
  id           Int        @id @default(autoincrement())
  name         String
  status       Status
  idEmployee   Int
  Employee     Employee   @relation(fields: [idEmployee], references: [id])
  idCoordinate Int
  Coordinate   Coordinate @relation(fields: [idCoordinate], references: [id])
  Zone         Zone[]
}

model Zone {
  id           Int        @id @default(autoincrement())
  name         String
  status       Status
  idPlant      Int
  Plant        Plant      @relation(fields: [idPlant], references: [id])
  idCoordinate Int
  Coordinate   Coordinate @relation(fields: [idCoordinate], references: [id])
  Sample       Sample[]
}

model Sample {
  id          Int      @id @default(autoincrement())
  material    String
  corrosion   String
  humidity    Float
  temperature Float
  date        DateTime @default(now())
  updatedAt   DateTime @updatedAt
  idZone      Int
  Zone        Zone     @relation(fields: [idZone], references: [id])
}