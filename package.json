    "@types/react-dom": "^19.0.2",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.0.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "postcss": "^8.4.49",
    "prettier": "^3.4.1",
    "prisma": "^5.22.0",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.12.0",
  "prettier": {
    "semi": false,
    "printWidth": 130,
    "tabWidth": 4,
    "useTabs": false,
    "trailingComma": "es5",
    "overrides": [
      {
        "files": [
          "*.json",
          "*.yml",
          "*.yaml",
          "*.md"
        ],
        "options": {
          "tabWidth": 2
        }
      }
    ]
  }
