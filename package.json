{
  "name": "next-solar-panels",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "dotenv -e .env.local -- next dev",
    "build": "dotenv -e .env.local -- next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prisma:migrate": "dotenv -e .env.local -- prisma migrate dev --name init",
    "prisma:generate": "dotenv -e .env.local -- prisma generate",
    "prisma:studio": "dotenv -e .env.local -- prisma studio",
    "prisma:deploy": "dotenv -e .env.local -- prisma migrate deploy",
    "db:pull": "dotenv -e .env.local -- prisma db pull"
  },
  "dependencies": {
    "@halvaradop/tailwindcss-utilities": "^0.2.3",
    "@halvaradop/ts-utility-types": "^0.11.1",
    "@halvaradop/ui-button": "^0.3.1",
    "@halvaradop/ui-form": "^0.1.1",
    "@halvaradop/ui-input": "^0.2.1",
    "@halvaradop/ui-label": "^0.1.1",
    "@prisma/client": "^5.21.1",
    "clsx": "^2.1.1",
    "dotenv-cli": "^7.4.2",
    "framer-motion": "^11.11.11",
    "jspdf": "^2.5.2",
    "next": "14.2.15",
    "next-auth": "5.0.0-beta.25",
    "react": "^18",
    "react-dom": "^18",
    "sharp": "^0.33.5",
    "tw-merge": "0.0.1-alpha.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.15",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "prisma": "^5.21.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "packageManager": "pnpm@9.12.0",
  "prettier": {
    "semi": false,
    "printWidth": 130,
    "tabWidth": 4,
    "useTabs": false,
    "trailingComma": "es5",
    "overrides": [
      {
        "files": [
          "*.json",
          "*.yml",
          "*.yaml",
          "*.md"
        ],
        "options": {
          "tabWidth": 2
        }
      }
    ]
  }
}
